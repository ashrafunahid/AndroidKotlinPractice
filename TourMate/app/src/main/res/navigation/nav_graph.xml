<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/landingFragment">

    <fragment
        android:id="@+id/landingFragment"
        android:name="com.ashrafunahid.tourmate.fragments.LandingFragment"
        android:label="fragment_landing"
        tools:layout="@layout/fragment_landing" >
        <action
            android:id="@+id/tour_list_action"
            app:destination="@id/nav_tour"
            app:popUpTo="@id/landingFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/login_action"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/landingFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.ashrafunahid.tourmate.fragments.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/login_to_tour_action"
            app:destination="@id/nav_tour"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/nav_tour"
        android:name="com.ashrafunahid.tourmate.fragments.TourFragment"
        android:label="fragment_tour"
        tools:layout="@layout/fragment_tour" >
        <action
            android:id="@+id/new_tour_action"
            app:destination="@id/newTourFragment" />
        <action
            android:id="@+id/tour_details_action"
            app:destination="@id/tourDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/newTourFragment"
        android:name="com.ashrafunahid.tourmate.fragments.NewTourFragment"
        android:label="fragment_new_tour"
        tools:layout="@layout/fragment_new_tour" />
    <fragment
        android:id="@+id/tourDetailsFragment"
        android:name="com.ashrafunahid.tourmate.fragments.TourDetailsFragment"
        android:label="fragment_tour_details"
        tools:layout="@layout/fragment_tour_details" >
        <argument
            android:name="tourId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="null" />
    </fragment>
    <fragment
        android:id="@+id/nav_weather"
        android:name="com.ashrafunahid.tourmate.fragments.WeatherFragment"
        android:label="fragment_weather"
        tools:layout="@layout/fragment_weather" />
</navigation>